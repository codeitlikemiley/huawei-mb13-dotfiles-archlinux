# Basic binds
# Open Terminal
super + Return
	$TERMINAL
# D Menu Launcher
super + shift + Return
	dmenu_run -fn "HackNerdFontMono-17" -sb "#FE80AB"
super + shift + q
	kill -9 `xdotool getwindowfocus getwindowpid`
# File Manager Launcher
super + r
	$TERMINAL -e ranger
super + shift + r
	reply
# Music Player
super + m
	$TERMINAL -e ncmpcpp
# Mute
super + shift + m
	lmc mute
# RSS
super + n
	$TERMINAL -e newsboat
# Calendar
super + y
	$TERMINAL -e calcurse
super + {a,shift + a}
	{rofi -show drun,killall matebook-applet || matebook-applet}
super + shift + c
	toggle_calculator
super + c
	code
# Browser
super + g
	brave
super + shift + g
	brave --incognito
super + shift + f
	pamac-manager
# File Manager
super + o
	nemo
# Unicode
super + u
	dmenuunicode
# Go to Link
super + i
	cabl
# Wiki
super + e
	$TERMINAL -e nvim -c "VimwikiIndex"
super + v
	com.github.davidmhewitt.clipped
super + w
	killall indicator-kdeconnect || indicator-kdeconnect
super + shift + w
	killall kdeconnect-indicator || kdeconnect-indicator
# Dropdown terminal
super + grave
	ddspawn tmuxdd
# Clipboard Manager
super + Insert
	showclip
# Delete Clipboard Manager
super + Delete
	xsel -c && xsel -bc
# Session Controller
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"
super + shift + backslash
	prompt 'Hibernate computer?' 'sudo -A zzz -Z'
super + x
	ifinstalled slock && ( slock & xset dpms force off ; mpc pause ; pauseallmpv )
super + BackSpace
	prompt "Do You Wanna Log Out?" "i3-msg exit"

# Spotify Controller
super + backslash
	toggle_music
super + bracketleft
	playerctl previous
super + bracketright
	playerctl next
super + shift + bracketleft
	lmc down 10
super + shift + bracketright
	lmc up 10

# Web Dev Utils
@alt + Insert
	pickcolor
# Screenshot
Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png
# Pick screenshot type
shift + @Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
super + shift + Print
	dmenurecord kill

# NCMPCPP / Audio Controls
super + slash
	mpc toggle
super + shift + slash
	mpc stop
# Changes to next/previous tracks
super + @{comma,period}
	lmc {prev,next}
# Restart track
super + shift + less
	lmc back 10
super + shift + greater
	lmc forward 10
# END # NCMPCPP / Audio Controls

# Rofi Custom Key Bindings
# Show Journal
super + {equal,plus}
	{addjournal,$TERMINAL -e showjrnl}
# ROFI SSH
super {_,shift +} + minus
	{rofi -show ssh,rofi-ssh}
super + shift + e
	dmenu_edit
# Password Manager
super + shift + space
	rofi-pass
# End Rofi Custom Key Bindings

# Huawei Matebook Logo F8 (Super + p)
super + {_,shift +} p
	{displayselect,playerctl play-pause}
# Function keys
super + F1
	ducksearch
super + F2
	i3 restart
super + F3
	killall redshift-gtk || redshift-gtk
super + F4
	toggle_music
super + F5
	pavucontrol
super + F6
	$TERMINAL -e pulsemixer; pkill -RTMIN+10 i3blocks
super + F7
	toggle_webcam
super + F8
	killall matebook-applet || matebook-applet
super + shift + F8
	toggle_kdeconnect
super + F9
	$TERMINAL -e sudo -A nmtui
super + shift + F9
    toggle_bluetooth
super + F10
	toggle_screenkey
# super + shift + F10 = distraction free mode in i3config
super + F11
	dmenumount
# Network Manager interface
super + F12
	dmenuumount

# Function Keys
XF86MonBrightnessDown
	sudo brightnessctl s 5%-
XF86MonBrightnessUp
	sudo brightnessctl s +5%
XF86AudioMute
	lmc mute
XF86AudioLowerVolume
	lmc down 5
XF86AudioRaiseVolume
	lmc up 5
# Used by Galaxy EarBuds
XF86Audio{Next,Prev}
	mpc {next,prev}
XF86Audio{Pause,Play,Stop}
	mpc {pause,play,stop}
XF86Audio{Rewind,Forward}
	mpc seek {-,+}10
# End Used By Galaxy EarBuds

# Pomodoro Control
super + Left
	i3-gnome-pomodoro toggle
super + Down
	i3-gnome-pomodoro stop
super + Up
	killall gnome-pomodoro || gnome-pomodoro --no-default-window
super + Right
	i3-gnome-pomodoro start
# Lock Touchpad
super + t
	toggle_touchpad
super + shift + t
	crontog

# CONTROL + ALT KEYBINDINGS
ctrl + alt + z
	zeal
ctrl + alt + d
	discord
ctrl + alt + f
	firefox
