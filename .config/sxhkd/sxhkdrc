#super + F6
#	torwrap
# toggle torrent daemon
#super + F7
#td-togggle
# select monitor
super + F8
	displayselect
# Mount a USB drive or Android device
#super + F9
# Unmount a USB drive or Android device
super + F10
	toggle_screenkey
super + F11
	dmenumount
# Network Manager interface
super + F12
	dmenuumount

# Function Keys
# BrightnessDown
XF86MonBrightnessDown
	sudo brightnessctl s 5%-
# BrightnessUp
XF86MonBrightnessUp
	sudo brightnessctl s +5%
# Mute
XF86AudioMute
	lmc mute
# LowerVolume
XF86AudioLowerVolume
	lmc down 5
# HigherVolume
XF86AudioRaiseVolume
	lmc up 5
# Used by Galaxy EarBuds
XF86Audio{Next,Prev}
	mpc {next,prev}
XF86Audio{Pause,Play,Stop}
	mpc {pause,play,stop}
XF86Audio{Rewind,Forward}
	mpc seek {-,+}10
# End Used By Galaxy EarBuds

# Arrow Keys Bindings (POMODORO)
super + Left
	i3-gnome-pomodoro toggle
super + Down
	getpomodorostatus
super + Up
	killall gnome-pomodoro || gnome-pomodoro --no-default-window
super + Right
	i3-gnome-pomodoro start


# Lock Touchpad
super + t
	toggle_touchpad
super + shift + t
	crontog

# CONTROL + ALT KEYBINDINGS
ctrl + alt + z
	zeal
ctrl + alt + d
	discord
ctrl + alt + f
	firefox
