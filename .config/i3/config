
# vim: filetype=i3


# This config file will use environmental variables such as $BROWSER and $TERMINAL.
# You can set these variables in ~/.profile or ~/.bash_profile if you have it as below:
#
# export FILE="ranger"
# export TERMINAL="st"

# #---Basic Definitions---# #
for_window [class="^.*"] border pixel 2
gaps inner 15
gaps outer 15

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Set Font
font pango:Hack 12

# Set Custom Variables
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $stoprec --no-startup-id dmenurecord kill
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend


# Custom Windows [CW]
for_window [class="Pinentry"] sticky enable
for_window [class="sent"] border pixel 0px
for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [title="Default - Wine desktop"] floating enable
for_window [title="Calculator"] move position center floating  enable sticky enable resize set 800 600
# Bindings to make the webcam float and stick.
for_window [title="mpvfloat"] floating enable
for_window [title="mpvfloat"] sticky enable
for_window [title="mpvfloat"] border pixel 0
no_focus [title="mpvfloat"]
# Specific Workspace
for_window [class="Spotify"] move workspace $ws10
# KDE CONNECT SMS
for_window [title="Compose SMS"] floating enable
for_window [title="SMS Instant Messaging"] floating enable



# #---Dropdown Windows---# #
# General dropdown window traits. The order can matter.
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_*"] scratchpad show
# Make Drop Down terminal Take up the Whole Screen
for_window [instance="dropdown_tmuxdd"] resize set  2160 1410
# Make Calculator Terminal Full Take up the whole Screen
for_window [instance="dropdown_dropdowncalc"] resize set 2160 1410
for_window [instance="dropdown_tmuxdd"] border pixel 2
for_window [instance="dropdown_dropdowncalc"] border pixel 2
for_window [instance="dropdown_*"] move position center

set $transparent  #00000000
set $darkcyan     #BA68C8
set $red          #FE80AB
set $darkblack    #2F3D44
set $urgent       #A8251F
set $darkwhite    #EBDBB2
set $white        #FFFFFF



client.focused           $transparent  $transparent  $transparent  $red		 $red
client.unfocused         $transparent  $transparent  $transparent  $transparent  $transparent
client.focused_inactive  $transparent  $transparent  $transparent  $darkcyan	 $darkcyan
client.urgent            $transparent  $transparent  $transparent  $urgent  	 $urgent
client.background        $transparent

# i3bars settings
bar {
	font pango:Hack Nerd Font Mono, Icons 15
	status_command i3blocks
	i3bar_command i3bar -t
	position top
	mode dock
	modifier None
	colors {
	background #00000050
	statusline #ffffff
	focused_workspace   $red        $red       $white
	active_workspace    $darkcyan   $darkcyan  $white
	inactive_workspace  $darkblack  $darkblack $white
	urgent_workspace    $urgent     $urgent    $white
	}
}


# #---Basic Bindings---# #

# ENABLE DISABLE MOD KEY
set $freeze MOD ÔÅû
mode "$freeze" { bindsym $mod+Shift+F10 mode "default"
}
bindsym $mod+Shift+F10		mode "$freeze" ;; exec --no-startup-id notify-send "Distraction-free mode activated." "Press Super+Shift+f to return."

# Creating new Terminal
#bindsym $mod+Return 		exec $term
#bindsym $mod+Shift+Return	exec --no-startup-id samedir

# killing/closing windows
bindsym $mod+q			[con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# toggle bindings
bindsym $mod+semicolon	        floating toggle
bindsym $mod+Shift+semicolon    sticky toggle
bindsym $mod+Shift+apostrophe	focus mode_toggle
bindsym $mod+b			bar mode toggle
bindsym $mod+f			fullscreen toggle
bindsym $mod+Shift+b		floating toggle; sticky toggle; exec --no-startup-id hover left
bindsym $mod+Shift+n		floating toggle; sticky toggle; exec --no-startup-id hover right


# Split Windows
bindsym $mod+apostrophe 	split toggle

# Rezing Windows -YUIO-
bindsym $mod+Shift+y		exec --no-startup-id i3resize left
bindsym $mod+Shift+u		exec --no-startup-id i3resize down
bindsym $mod+Shift+i		exec --no-startup-id i3resize up
bindsym $mod+Shift+o		exec --no-startup-id i3resize right

# Change Focus on Windows -HJKL- or Arrow Keys
bindsym $mod+h			focus left
bindsym $mod+j			focus down
bindsym $mod+k			focus up
bindsym $mod+l			focus right


# Moving / Switching Windows -HJKL-
bindsym $mod+Shift+h		move left 5
bindsym $mod+Shift+j		move down 5
bindsym $mod+Shift+k		move up 5
bindsym $mod+Shift+l		move right 5


# Increase/Decrease Outer Gaps
bindsym $mod+z			gaps outer current plus 5
bindsym $mod+Shift+z		gaps outer current minus 5


# Increase/Decrease Inner Gaps
bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5

# Reset Default Gaps
bindsym $mod+Shift+d		gaps inner current set 15; gaps inner current set 15
# Remove Gaps
bindsym $mod+d		gaps inner current set 0; gaps outer current set 0

# Workspace Tab
bindsym $mod+Tab		workspace next
bindsym $mod+Shift+Tab          workspace prev

# #---Workspace Bindings---# #
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

# #---Function Buttons---# #

#STOP/HIDE EVERYTHING:
bindsym Control+Mod1+Delete	exec --no-startup-id lmc truemute ; exec --no-startup-id lmc pause ; exec --no-startup-id pauseallmpv; workspace 0; exec $term -e htop ; exec $term -e $FILE
# This cant be binded by SHXKD so we revert back to add it on i3 config
bindsym XF86Tools exec --no-startup-id toggle_keyboard
bindsym XF86AudioMicMute exec --no-startup-id amixer set Capture toggle && amixer get Capture | grep '\[off\]' && notify-send "MIC switched OFF" || notify-send "MIC switched ON"

exec --no-startup-id /usr/lib/kdeconnectd
#exec --no-startup-id /usr/bin/kdeconnect-indicator
#exec --no-startup-id /usr/bin/indicator-kdeconnect
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
